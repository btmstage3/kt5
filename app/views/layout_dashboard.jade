doctype html
html
  head
    title Dashboard
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css')
    link(rel="stylesheet", href="/css/dashboard.css")  

    style.
      body {
        display: flex;
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .sidebar {
        width: 220px;
        height: 100vh;
        background-color: #f8f9fa;
        padding: 20px;
      }
      .content {
        flex-grow: 1;
        padding: 20px;
      }

  body
    .sidebar
      if user && user.username
        h4 Hello, #{user.username}
      else
        script.
          window.location.href = '/login';
      ul.nav.flex-column
        li.nav-item
          a.nav-link(href='/dashboard') Dashboard
        li.nav-item
          a.nav-link(href='/assets/stock') Stock View
        li.nav-item
          a.nav-link(href='/assets') Assets
        li.nav-item
          a.nav-link(href='/categories') Categories
        li.nav-item
          a.nav-link(href='/employees') Employees
        li.nav-item
          a.nav-link(href='/issue/issue') Issue Asset
        li.nav-item
          a.nav-link(href='/return/return') Return Asset
        li.nav-item
          a.nav-link(href='/return/scrap') Scrap Asset
        li.nav-item
          a.nav-link(href='/return/history') Asset History
        if user && user.role === 'admin'
          li.nav-item
            a.nav-link(href='/admin/users/create') Create User
        li.nav-item.mt-4
          a.nav-link.text-danger(href='/logout') Logout

    .content
      block content


    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
    script(src='https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js')
    script.
      $(document).ready(function () {
        $('table.dataTable').DataTable({
          paging: true,
          ordering: true,
          searching: true
        });
      });
