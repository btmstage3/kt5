extends ../layout

block content
  .container-fluid
    .row

      .col-md-6.d-flex.align-items-center.justify-content-center(style='min-height: 100vh; background-color: #f8f9fa')
        .w-75
          h2.mb-4 Login

          if error
            .alert.alert-danger #{error}

          form(action='/login', method='POST')
            .mb-3
              label.form-label(for='username') Username
              input.form-control(type='text', name='username', required)
            .mb-3
              label.form-label(for='password') Password
              input.form-control(type='password', name='password', required)
            button.btn.btn-primary(type='submit') Login


      .col-md-6.d-none.d-md-block(style='background-color: #e9ecef')
